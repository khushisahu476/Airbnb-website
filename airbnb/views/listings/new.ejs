<%- layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <div class="col-8 offset-2" >
        <br><br>
    <h1>Create a new Listing</h1>
    <form method="POST" action="/listings" novalidate class="needs-validation">

        <div class="mb-3">
            <label for="title" class="form-lebel"> Title </label>
            <input name="listing[title]" type="text" placeholder="Add a catcy title" class="form-control"
            required
            />
            <div class="valid-feedback">Title looks good</div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-lebel">Description</label>
            <textarea name="listing[description]" class="form-control" required></textarea>
            <div class="invalid-feedback">Please enter the a short description</div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-lebel">Image</label>
            <input name="listing[image]" placeholder="enter URL/Link" type="text" class="form-control"required>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4 " >
                <label for="price" class="form-lebel">Price</label>
                <input name="listing[price]" placeholder="12000"  type="number" class="form-control" required>
                <div class="valid-feedback">Please enter a valid price</div>
            </div>
            <div class="mb-3 col-md-8">
                    <label for="country" class="form-lebel">Country</label>
                    <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
                    <div class="invalid-feedback">Please enter the country name.</div>
            </div>
        </div>

        <div class="mb-3">
            <label for="location" class="form-lebel">Location</label>
            <input name="listing[location]"placeholder="Bhopal,Madhya-pradesh" type="text" class="form-control" required>
            <div class="invalid-feedback">Location should be valid.</div>
        </div>
        <button class="btn btn-dark  add-btn mt-3">Add</button>  
    </form>
    <br><br<br>
    <br><br<br>
  </div>
</div>
