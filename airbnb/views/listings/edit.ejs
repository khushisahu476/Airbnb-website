<%- layout("layouts/boilerplate.ejs")  %>
<body>
    <div class="row mt-3">
    <div class="col-8 offset-2"><br>
    <h1 style="color: brown;">Edit listing</h1><br>
    <h3> Your id : <%= newdata._id %></h3><br>
    <form method="POST" action="/listings/<%=newdata._id%>?_method=PUT" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-lebel"> Title </label>
            <input name="listing[title]" 
           value="<%= newdata.title%>" 
           type="text" 
           class="form-control"
           required
           />
           <div class="valid-feedback">Title looks good</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-lebel"> Description </label>
            <textarea name="listing[description]" class="form-control" required><%= newdata.description %></textarea>
            <div class="invalid-feedback">Please write a short description.</div>
        </div>

        <div class="mb-3">
          <label for="image" class="form-lebel"> Image link </label>
          <input name="listing[image]" 
            value="<%= newdata.image%>" 
            type="text"
            class="form-control"
            required
            >
          <div class="invalid-feedback">Image is required</div>
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-lebel" > Price </label>
            <input name="listing[price]" value="<%= newdata.price %>" type="number" class="form-control" required>
            <div class="invalid-feedback" required>Price should be valid.</div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-lebel"> Country </label>
            <input name="listing[country]" 
            value="<%= newdata.country%>" 
            type="text" 
            class="form-control" 
            required
            >
            <div class="invalid-feedback">Country name should be valid</div>
            </div>
       </div>

        <div class="mb-3">
            <label for="location" class="form-lebel">Location</label>
        <input name="listing[location]" 
        value="<%= newdata.location%>" 
        type="text"  
        class="form-control" 
        required
        >
        <div class="invalid-feedback">Please enter the location</div>
        </div>
        <button class="btn btn-dark edit-btn mt-3">Edit</button>
        <br><br><br>
        <br><br><br>
    </form>
</div>
</div>
<script src="/js/script.js"></script>
</body>
