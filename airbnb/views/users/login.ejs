<% layout("/layouts/boilerplate") %>
<h1 class="col-6 offset-3"> Login</h1>
<div class="row mt-3">
    <div class="col-6 offset-3">
         <form action="/login" method="post" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="username" class="form-lebel"> Username</label>
                <input 
                name="username"
                id="username"
                type="text" 
                class="form-control"
                required
                />
            </div>
            <div class="mb-3">
                <label for="password" class="form-lebel"> Password</label>
                <input 
                name="password"
                id="password"
                type="password" 
                class="form-control"
                required
                />
            </div>
            <button class="btn btn-success">Login</button>
         </form>
    </div>

</div>